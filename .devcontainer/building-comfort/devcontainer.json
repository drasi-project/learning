{
  "name": "Building Comfort with Drasi",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/tutorial/building-comfort",
  "onCreateCommand": "bash ../../.devcontainer/building-comfort/on-create.sh",
  "postCreateCommand": "bash ../../.devcontainer/building-comfort/post-create.sh",
  "runArgs": [
    "--privileged",
    "--init",
    "--ipc=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "DrasiProject.drasi",
        "cweijan.vscode-database-client2"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "27",
      "moby": "false"
    },
    "ghcr.io/devcontainers/features/node:1": {
        "version": "22"
    }
  },
  "containerEnv": {
    "LANG": "en_US.UTF-8",
    "LANGUAGE": "en_US:en",
    "LC_ALL": "en_US.UTF-8",
    "DRASI_TUTORIAL_EVALUATION": "${localEnv:DRASI_TUTORIAL_EVALUATION}"
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "GITHUB_ACTIONS": "${localEnv:GITHUB_ACTIONS}",
    "COPILOT_GITHUB_TOKEN": "${localEnv:COPILOT_GITHUB_TOKEN}"
  },
  "forwardPorts": [8123],
  "portsAttributes": {
    "8123": {
      "label": "Building Comfort Apps",
      "onAutoForward": "notify",
      "protocol": "http"
    }
  },
  
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}