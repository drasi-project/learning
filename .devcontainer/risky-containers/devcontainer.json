{
	"name": "Risky Containers with Drasi",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"hostRequirements": {
		"cpus": 4
	},
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/tutorial/risky-containers",
	"onCreateCommand": "sed -i 's/\r$//' ../../.devcontainer/risky-containers/post-create.sh && sed -i  's/\r$//' ../../.devcontainer/risky-containers/on-create.sh && bash ../../.devcontainer/risky-containers/on-create.sh",
  	"postCreateCommand": "bash ../../.devcontainer/risky-containers/post-create.sh",
	"postStartCommand": "bash ../../.devcontainer/risky-containers/post-start.sh",
	"runArgs": [
	  "--privileged",
	  "--init",
      "--ipc=host"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-dapr",
				"ms-azuretools.vscode-docker",
				"GitHub.copilot",
				"ckolkman.vscode-postgres",
				"DrasiProject.drasi"
			]
		}
	},
	// Features to add to the dev container. More info: https://containers.dev/features
	"features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {
        "version": "27",
        "moby": "false"
      },
	  "ghcr.io/devcontainers/features/node:1": {
		"version": "22"
	  },
	  "ghcr.io/rio/features/k3d:1": {},
	  "ghcr.io/robbert229/devcontainer-features/postgresql-client:1": {
		"version": "15"
	  }
	},
	// Configure environment variables
    "containerEnv": {
        "LANG": "en_US.UTF-8",
        "LANGUAGE": "en_US:en",
        "LC_ALL": "en_US.UTF-8",
        "DRASI_TUTORIAL_EVALUATION": "${localEnv:DRASI_TUTORIAL_EVALUATION}"
    },
	"remoteEnv": {
	  "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
	  "GITHUB_ACTIONS": "${localEnv:GITHUB_ACTIONS}",
	  "COPILOT_GITHUB_TOKEN": "${localEnv:COPILOT_GITHUB_TOKEN}",
	  "PGHOST": "localhost",
	  "PGDATABASE": "tutorial",
	  "PGPORT": "5432",
	  "PGUSER" : "test",
	  "PGPASSWORD" : "test"
	},
	"portsAttributes": {
	  "5432": {
		"label": "postgres",
		"onAutoForward": "silent"
	  },
	  "8081": {
		"label": "k3s",
		"onAutoForward": "silent"
	  }
	}
  }