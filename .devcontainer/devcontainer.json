{
  "name": "Getting started with Drasi",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/tutorial/getting-started",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "hostRequirements": {
		"cpus": 4
	},
  "onCreateCommand": "sed -i 's/\r$//' ../../.devcontainer/on-create.sh && sed -i  's/\r$//' ../../.devcontainer/post-create.sh && sed -i  's/\r$//' ../../.devcontainer/post-start.sh && bash ../../.devcontainer/on-create.sh",
  "postCreateCommand": "bash ../../.devcontainer/post-create.sh",
  "postStartCommand": "bash ../../.devcontainer/post-start.sh",
	"runArgs": [
	  "--privileged",
	  "--init",
    "--ipc=host"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "27",
      "moby": "false"
    },
    "ghcr.io/devcontainers/features/node:1": {
        "version": "22"
    },
    "ghcr.io/rio/features/k3d:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ckolkman.vscode-postgres"
      ]
    }
  },
  "containerEnv": {
    "DRASI_TUTORIAL_EVALUATION": "${localEnv:DRASI_TUTORIAL_EVALUATION}"
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "GITHUB_ACTIONS": "${localEnv:GITHUB_ACTIONS}",
    "COPILOT_GITHUB_TOKEN": "${localEnv:COPILOT_GITHUB_TOKEN}",
    "PGHOST": "localhost",
    "PGDATABASE": "hello-world",
    "PGPORT": "5432",
    "PGUSER" : "test",
    "PGPASSWORD" : "test"
  },
  "portsAttributes": {
    "5432": {
    "label": "postgres",
    "onAutoForward": "silent"
    },
    "8081": {
    "label": "k3s",
    "onAutoForward": "silent"
    }
  }
}
